<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:df="nativescript-ui-dataform"
      navigatingTo="navigatingTo"
      class="page">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="{{ L('attributes.title') }}"></Label>
    </ActionBar>
    <GridLayout columns="*">
        <ScrollView row="0">
            <StackLayout class="p-20" row="0">

                <df:RadDataForm id="myDataForm" source="{{ userId }}">
                    <df:RadaForm.properties>
                        <df:EntityProperty name="alias" displayName="{{ L('attributes.alias') }}" index="0" hintIndex="{{ L('attributes.alias_hint') }}">
                            <df:EntityProperty.editor>
                                <df:PropertyEditor type="Text">
                                    <df:PropertyEditor.propertyEditorStyle>
                                        <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                                labelFontStyle="Italic" labelTextColor="#00695c"/>
                                    </df:PropertyEditor.propertyEditorStyle>
                                </df:PropertyEditor>
                            </df:EntityProperty.editor>
                        </df:EntityProperty>
                        <df:EntityProperty name="email" displayName="{{ L('attributes.email') }}" index="1" hintText="{{ L('attributes.email_hint') }}">
                            <df:EntityProperty.editor>
                                <df:PropertyEditor type="Email">
                                    <df:PropertyEditor.propertyEditorStyle>
                                        <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                                labelFontStyle="Italic" labelTextColor="#00695c"/>
                                    </df:PropertyEditor.propertyEditorStyle>
                                </df:PropertyEditor>
                            </df:EntityProperty.editor>
                        </df:EntityProperty>
                        <df:EntityProperty name="phone" displayName="{{ L('attributes.phone') }}" index="2" hintText="{{ L('attributes.phone_hint') }}">
                            <df:EntityProperty.editor>
                                <df:PropertyEditor type="Phone">
                                    <df:PropertyEditor.propertyEditorStyle>
                                        <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                                labelFontStyle="Italic" labelTextColor="#00695c"/>
                                    </df:PropertyEditor.propertyEditorStyle>
                                </df:PropertyEditor>
                            </df:EntityProperty.editor>
                        </df:EntityProperty>
                        <df:EntityProperty name="url" displayName="{{ L('attributes.url') }}" index="2" hintText="{{ L('attributes.url_hint') }}">
                            <df:EntityProperty.editor>
                                <df:PropertyEditor type="Text">
                                    <df:PropertyEditor.propertyEditorStyle>
                                        <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                                labelFontStyle="Italic" labelTextColor="#00695c"/>
                                    </df:PropertyEditor.propertyEditorStyle>
                                </df:PropertyEditor>
                            </df:EntityProperty.editor>
                        </df:EntityProperty>
                        <df:EntityProperty name="publishPersonhood" displayName="{{ L('attributes.publish') }}" index="3">
                            <df:EntityProperty.editor>
                                <df:PropertyEditor type="Switch">
                                    <df:PropertyEditor.propertyEditorStyle>
                                        <df:PropertyEditorStyle labelPosition="Left" labelWidth="160"
                                                                labelFontStyle="Italic" labelTextColor="#00695c"/>
                                    </df:PropertyEditor.propertyEditorStyle>
                                </df:PropertyEditor>
                            </df:EntityProperty.editor>
                        </df:EntityProperty>
                    </df:RadaForm.properties>
                </df:RadDataForm>

                <Button text="{{ L('button.save') }}" tap="tapSave" class="btn btn-primary"/>
            </StackLayout>
        </ScrollView>

        <GridLayout rows="auto" row="0" class="network-progress-grid">
            <GridLayout visibility="{{ networkStatus ? 'visible' : 'hidden'}}">
                <Label row="0" text="{{ networkStatus }}" class="label-title network-progress"
                       id="progress_text"/>
                <Label row="0" width="100%" class="network-progress-bar"
                       id="progress_bar" tap="setProgress"/>
            </GridLayout>
        </GridLayout>
    </GridLayout>
</Page>
