<!--
Here the user can enter his alias
-->
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="{{ L('presenting.title3') }}"/>
    </ActionBar>
    <ScrollView>
        <StackLayout class="p-20">
            <Label text="{{ L('presenting.poc') }}" class="h2"/>
            <Label text="{{ L('presenting.asis') }}"
                   class="h3" textWrap="true"/>
            <Label text="{{ L('presenting.congrats') }}"
                   class="h3"
                   textWrap="true"/>
            <Label text="{{ L('presenting.parties') }}"
                   class="h3"
                   textWrap="true"/>
            <Label text="{{ L('presenting.next_steps') }}"
                   class="h3"
                   textWrap="true"/>
            <Button text="{{ L('presenting.go_main') }}" tap="goMain" class="btn btn-primary"/>
            <Button text="{{ L('presenting.delete_all') }}" tap="deleteAll" class="btn btn-test"
                    visibility="{{ testing ? 'visible' : 'collapse' }}"/>
        </StackLayout>
    </ScrollView>
</Page>
