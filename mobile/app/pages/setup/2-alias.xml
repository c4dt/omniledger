<!--
Here the user can enter his alias
-->
<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      navigatingTo="navigatingTo"
      xmlns:df="nativescript-ui-dataform"
      class="page">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Setting Alias"></Label>
    </ActionBar>
    <ScrollView>
        <StackLayout class="p-20">
            <Label text="{{ L('presenting.identity' )}}" class="h1 text-center" textWrap="true"/>
            <Label text="{{ L('presenting.identity_desc') }}" class="h3" textWrap="true"/>
            <df:RadDataForm id="myDataForm" source="{{ input }}">
                <df:RadaForm.properties>
                    <df:EntityProperty name="alias"
                                       displayName="{{ L('presenting.alias') }}"
                                       hintText="{{ L('presenting.alias_hint') }}" index="0" labelWidth="60">
                        <df:EntityProperty.editor>
                            <df:PropertyEditor type="Text">
                                <df:PropertyEditor.propertyEditorStyle>
                                    <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                            labelFontStyle="Italic" labelTextColor="#00695c"/>
                                </df:PropertyEditor.propertyEditorStyle>
                            </df:PropertyEditor>
                        </df:EntityProperty.editor>
                    </df:EntityProperty>
                    <df:EntityProperty name="email" index="1"
                                       displayName="{{ L('presenting.email') }}"
                                       hintText="{{ L('presenting.email_hint') }}">
                        <df:EntityProperty.editor>
                            <df:PropertyEditor type="Text">
                                <df:PropertyEditor.propertyEditorStyle>
                                    <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                            labelFontStyle="Italic" labelTextColor="#00695c"/>
                                </df:PropertyEditor.propertyEditorStyle>
                            </df:PropertyEditor>
                        </df:EntityProperty.editor>
                    </df:EntityProperty>
                    <df:EntityProperty name="phone" index="2"
                                       displayName="{{ L('presenting.phone') }}"
                                       hintText="{{ L('presenting.phone_hint') }}">
                        <df:EntityProperty.editor>
                            <df:PropertyEditor type="Text">
                                <df:PropertyEditor.propertyEditorStyle>
                                    <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                            labelFontStyle="Italic" labelTextColor="#00695c"/>
                                </df:PropertyEditor.propertyEditorStyle>
                            </df:PropertyEditor>
                        </df:EntityProperty.editor>
                    </df:EntityProperty>
                    <df:EntityProperty name="url" index="2"
                                       displayName="{{ L('presenting.url') }}"
                                       hintText="{{ L('presenting.url_hint') }}">
                        <df:EntityProperty.editor>
                            <df:PropertyEditor type="Text">
                                <df:PropertyEditor.propertyEditorStyle>
                                    <df:PropertyEditorStyle labelPosition="Left" labelWidth="60"
                                                            labelFontStyle="Italic" labelTextColor="#00695c"/>
                                </df:PropertyEditor.propertyEditorStyle>
                            </df:PropertyEditor>
                        </df:EntityProperty.editor>
                    </df:EntityProperty>
                </df:RadaForm.properties>
            </df:RadDataForm>

            <Button text="Continue" tap="goNext" class="btn btn-primary"/>
        </StackLayout>
    </ScrollView>
</Page>
