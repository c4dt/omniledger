<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:df="nativescript-ui-dataform"
      navigatingTo="navigatingTo"
      class="page">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Settings"></Label>
    </ActionBar>
    <ScrollView>
        <GridLayout rows="auto, *, auto, auto">
            <StackLayout class="p-20" row="0">
                <df:RadDataForm id="myDataForm" source="{{ admin }}">
                    <df:RadaForm.properties>
                        <df:EntityProperty name="continuousScan" index="2">
                            <df:EntityProperty.editor>
                                <df:PropertyEditor type="Switch">
                                    <df:PropertyEditor.propertyEditorStyle>
                                        <df:PropertyEditorStyle labelPosition="Left" labelWidth="160"
                                                                labelFontStyle="Italic" labelTextColor="#00695c"/>
                                    </df:PropertyEditor.propertyEditorStyle>
                                </df:PropertyEditor>
                            </df:EntityProperty.editor>
                        </df:EntityProperty>
                    </df:RadaForm.properties>
                </df:RadDataForm>
                <Button text="Clear all data" tap="tapClear" class="btn btn-test"
                        visibility="{{ testing ? 'visible' : 'collapse' }}"/>
                <Button text="Share data" tap="shareData" class="btn btn-test"
                        visibility="{{ testing ? 'visible' : 'collapse' }}"/>
                <Button text="Save" tap="tapSave" class="btn"/>
            </StackLayout>

            <StackLayout row="1">
                <ListView items="{{ nodes }}" class="list-group"
                          height="200" tap="{{ updateNodes }}">
                    <ListView.itemTemplate>
                        <FlexboxLayout orientation="horizontal" flexDirection="row"
                                       class="basic-list-decorated"
                                       alignItems="center">
                            <Label text="{{ address + ' - ' + status }}" class="h3"/>
                        </FlexboxLayout>
                    </ListView.itemTemplate>
                </ListView>
            </StackLayout>

            <StackLayout row="2">
                <StackLayout orientation="horizontal" style="horizontal-align: center;">
                    <StackLayout>
                        <HtmlView html="Personhood is brought to you by <u>https://personhood.online</u>" class="h3"
                                  textWrap="true"
                                  width="60%" style="vertical-align: center;" tap="goPersonhood"/>
                        <HtmlView html="You find the code on github: <u>https://github.com/dedis/personhood.online</u>"
                                  class="h3"
                                  textWrap="true"
                                  width="60%" style="vertical-align: center;" tap="goGithub"/>
                    </StackLayout>
                    <Image src="~/images/icon-personhood-64.png" width="20%" tap="goPersonhood"/>
                </StackLayout>
            </StackLayout>

            <Label text="Version 0.5.1" class="h5" row="3" style="text-align: right; margin-right: 5%;"/>
        </GridLayout>
    </ScrollView>
</Page>
