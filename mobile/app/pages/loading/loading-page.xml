<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      navigatingTo="navigatingTo"
      class="page">
    <GridLayout rows="*, auto, *, *">
        <Label text="Connecting" class="h1 text-center" row="1"/>
        <ListView items="{{ steps }}" row="2" width="50%">
            <ListView.itemTemplate>
                <StackLayout>
                    <Label text="{{ text }}"/>
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>
