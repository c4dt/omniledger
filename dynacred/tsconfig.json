{
  "extends": "../tsconfig.common",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
