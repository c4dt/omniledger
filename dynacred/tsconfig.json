{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es6",
	"noImplicitAny": true,
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
